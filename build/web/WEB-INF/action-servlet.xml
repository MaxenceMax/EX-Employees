<beans> 
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" singleton="true">
        <property name="driverClassName" value="org.apache.derby.jdbc.ClientDriver"/>
        <property name="url" value="jdbc:derby://localhost:1527/sample" />
        <property name="username" value="app" />
        <property name="password" value="app" />
        <property name="maxActive" value="10" />
    </bean>
    <bean id="dao" class="com.myapp.struts.model.ModeleImp" singleton="true">
        <property name="datasource"> 
            <ref bean="dataSource"/>
        </property>
    </bean>
    <bean id="abstractAction" abstract="true">
        <property name="IModel">
            <ref bean="dao"/>
        </property>
    </bean>
    <bean name="/Add" parent="abstractAction" class="com.myapp.struts.action.AddEmployeAction"/>
    <bean name="/Delete" parent="abstractAction" class="com.myapp.struts.action.DeleteEmployeAction"/>
    <bean name="/Edit" parent="abstractAction" class="com.myapp.struts.action.EditEmployeAction"/>
    <bean name="/Show" parent="abstractAction" class="com.myapp.struts.action.EmployeListeAction"/>
    <bean name="/GetForm" parent="abstractAction" class="com.myapp.struts.action.GetEmployeAction"/>
    <bean name="/Login" parent="abstractAction" class="com.myapp.struts.action.LoginAction"/>
</beans>
